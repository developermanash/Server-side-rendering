<!doctype html>
<html lang="en">

<head>
  <%- include('partials/head') %>
  <title>Homepage</title>
  <style>
    body {
      background-color: #000;
      color: #fff;
    }

    .card {
      background-color: #1a1a1a;
      color: #fff;
      border: 1px solid #333;
    }

    .card-title,
    .card-text {
      color: #fff;
    }

    .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
    }

    .btn-primary:hover {
      background-color: #0056b3;
      border-color: #004b9b;
    }
  </style>
</head>

<body>

  <%- include('partials/nav') %>

  <div class="container mt-3">
    <div class="row">
      <% blogs.forEach(blog => { %>
        <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
          <div class="card" style="width: 100%; font-size: 0.9rem;">
            <img 
              class="card-img-top" 
              src="<%= blog.coverImageURL %>" 
              alt="Cover image" 
              style="height: 150px; object-fit: cover;">
            <div class="card-body p-2">
              <h6 class="card-title mb-1"><%= blog.title %></h6>
              <p class="card-text text-truncate" style="max-height: 40px; overflow: hidden;"><%= blog.body %></p>
              <a href="/blog/<%= blog._id %>" class="btn btn-sm btn-primary">Read</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <%- include('partials/scripts') %>
</body>

</html>
